---command to see the list of database
show database;
--- to create a database
create datbase noob_db;
---to delete a database
drop database noob_db;
---to get inside a database
use noob_db;
---create a table in db
create table if not exist employee
( id INT,
emp_name VARCHAR(20) );
--- to show the table
show table;
--- command to see the table defination
show create table employee;
---create employee table with few more table
create table if not exist employee(
id int,
name varvhar(20),
salary double,
hiring_date date
);
---syntaz to insert data into a table
insert into employee values(01,'shaku',5000,2015-05-21);
